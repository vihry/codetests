{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "rootDir": ".",
    "types": [
      "mocha",
      "chai"
    ],
    "lib": [
      "es2015",
      "es2017",
      "es2020",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
